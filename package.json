{
  "name": "free-retro",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "browserslist": "last 4 version",
  "scripts": {
    "release": "semantic-release --repositoryUrl=\"https://github.com/andrewinci/free-retro.git\"",
    "postinstall": "husky install",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "coverage": "jest --coverage",
    "test": "jest --silent",
    "build:app": "yarn ts-node build.js app",
    "build:lambda": "yarn ts-node build.js lambda",
    "build": "yarn ts-node build.js all",
    "lint:css": "stylelint './src/app/**/*.tsx'",
    "lint": "prettier --write . '!dist' '!coverage' && yarn eslint src/ && yarn tsc --noemit && yarn lint:css",
    "serve": "yarn ts-node build.js serve",
    "deploy": "AWS_DEFAULT_REGION=eu-west-1 yarn build && yarn cdk bootstrap && yarn cdk deploy --require-approval never"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "plugin:react/jsx-runtime"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "require-await": "warn",
      "@typescript-eslint/no-useless-constructor": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/react-in-jsx-scope": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "bracketSameLine": true,
    "semi": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock",
      "<rootDir>/src/app/test-mocks.ts"
    ],
    "coveragePathIgnorePatterns": [
      "src/app/components/index.ts",
      "src/app/index.tsx",
      "src/infra/*"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.[tj]s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!react-dnd|dnd-core|@react-dnd)"
    ]
  },
  "stylelint": {
    "customSyntax": "postcss-jsx",
    "rules": {
      "no-empty-first-line": null
    },
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.19"
  },
  "dependencies": {
    "@automerge/automerge": "^2.0.3",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.11.0",
    "@mantine/core": "^5.10.5",
    "@mantine/hooks": "^5.10.5",
    "@tabler/icons-react": "^2.22.0",
    "axios": "^1.3.5",
    "buffer": "^6.0.3",
    "dayjs": "^1.11.8",
    "postcss-syntax": "^0.36.2",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.53.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.53.0-alpha.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.341.0",
    "@aws-sdk/client-dynamodb": "^3.350.0",
    "@aws-sdk/util-dynamodb": "^3.354.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/aws-lambda": "^8.10.117",
    "@types/ip": "^1.1.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.4",
    "@types/react-test-renderer": "^18.0.0",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^3.0.1",
    "aws-cdk": "^2.87.0",
    "aws-cdk-lib": "^2.85.0",
    "aws-sdk-client-mock": "^2.1.1",
    "constructs": "^10.2.70",
    "coveralls": "^3.1.1",
    "esbuild": "^0.18.13",
    "esbuild-sass-plugin": "^2.11.0",
    "esbuild-serve": "^1.0.1",
    "eslint": "^8.29.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "ip": "^1.1.8",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-localstorage-mock": "^2.4.26",
    "jest-location-mock": "^1.0.9",
    "lint-staged": "^13.2.2",
    "mock-socket": "^9.1.5",
    "postcss-jsx": "^0.36.4",
    "prettier": "^3.0.0",
    "react-dnd-test-backend": "^16.0.1",
    "react-test-renderer": "^18.2.0",
    "semantic-release": "^21.0.1",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^29.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.4.2",
    "vite-plugin-top-level-await": "^1.2.2",
    "vite-plugin-wasm": "^3.1.0",
    "yarn-upgrade-all": "^0.7.1"
  }
}
